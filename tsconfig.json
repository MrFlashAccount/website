{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "strict": true,
    "esModuleInterop": true,
    "pretty": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "react-jsx",
    "jsxFragmentFactory": "React.Fragment",
    "baseUrl": "./src",
    "lib": ["es2019", "dom"],
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "public",
    "jest",
  ]
}
