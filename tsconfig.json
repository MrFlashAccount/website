{
	"compilerOptions": {
		"strictPropertyInitialization": false,
		"strict": true,
		"esModuleInterop": true,
		"pretty": false,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"lib": ["es2022", "dom", "dom.iterable"],
		"resolveJsonModule": true,
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./src/types", "./src/env.d.ts"],
		"skipLibCheck": true,
		"noEmit": true,
		"allowJs": true,
		"verbatimModuleSyntax": true,
		"allowImportingTsExtensions": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "public", "jest"],
}
