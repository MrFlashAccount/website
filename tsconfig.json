{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "strict": true,
    "esModuleInterop": true,
    "pretty": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "lib": ["es2019", "dom"],
    "resolveJsonModule": true,
    "types": ["node", "@astrojs/image/client"],
    "typeRoots": ["./node_modules/@types", "./src/types", "./src/env.d.ts"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public", "jest"]
}
