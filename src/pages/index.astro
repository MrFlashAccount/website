---
import { getImage } from "astro:assets";
import me from "../static/me.jpg";
import meOriginal from "../static/me.jpg?url";
import Link from "../components/link.astro";
import MainLayout from "../layouts/main.astro";

const meMobileAvif = await getImage({
	src: me,
	format: "avif",
	width: 128,
	height: 128,
	densities: [1, 1.5],
});
const meMobileWebp = await getImage({
	src: me,
	format: "webp",
	width: 128,
	height: 128,
	densities: [1, 1.5],
});
const meDesktopAvif = await getImage({
	src: me,
	format: "avif",
	width: 256,
	height: 256,
	densities: [1, 1.5],
});
const meDesktopWebp = await getImage({
	src: me,
	format: "webp",
	width: 256,
	height: 256,
	densities: [1, 1.5],
});
const meFallback = await getImage({
	src: me,
	format: "jpg",
	width: 128,
	height: 128,
});
---

