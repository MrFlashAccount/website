---
const { class: className, roundRadius, ...rest } = Astro.props;
---

<a
	{...rest}
	class:list={[
		"underline",
		"underline-offset-2",
		"decoration-2",
		roundRadius ? `rounded-${roundRadius}` : "rounded",
		"focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-2",
		"transition-colors",
		"duration-200",
		"text-gray-600",
		"hover:text-gray-900",
		"hover:decoration-gray-900",
		className,
	]}
	><slot />
</a>
