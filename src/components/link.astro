---
import { twMerge } from "tailwind-merge";
const { class: className, roundRadius, ...rest } = Astro.props;
---

<a
	{...rest}
	class={twMerge([
		"underline",
		"focus:ring-2",
		roundRadius ? `rounded-${roundRadius}` : "rounded",
		"focus:outline-none",
		"focus:ring-blue-500",
		"focus:ring-offset-2",
		"transition-color",
		"transition-shadow",
		"hover:text-blue-700",
		className,
	])}
>
	<slot />
</a>
