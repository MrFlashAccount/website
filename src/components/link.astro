---
import clsx from "clsx";

const { class: className, roundRadius, ...rest } = Astro.props;
---

<a
	{...rest}
	class={clsx(
		"underline",
		"underline-offset-2",
		"decoration-2",
		roundRadius ? `rounded-${roundRadius}` : "rounded",
		"focus-visible:outline-none",
		"focus-visible:ring-2",
		"focus-visible:ring-gray-900",
		"focus-visible:ring-offset-2",
		"transition-all",
		"duration-200",
		"hover:text-gray-900",
		"hover:decoration-gray-900",
		className,
	)}><slot /></a
>
