---
import { twMerge } from "tailwind-merge";
const { class: className, ...rest } = Astro.props;
---

<a
	{...rest}
	class={twMerge(
		"underline",
		"underline-offset-2",
		"decoration-2",
		"focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-2",
		"transition-colors",
		"duration-200",
		"text-black",
		"hover:text-gray-900",
		"hover:decoration-gray-900",
		className,
	)}
	><slot />
</a>
